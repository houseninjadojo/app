{{page-title 'Settings - New Payment Method'}}
<Primitive::Modal::Tray
  @onBack={{this.resetForm}}
  @saveAction={{this.saveAction}}
  @formIsInvalid={{this.formIsInvalid}}
>
  <View::AccountSettings::PaymentMethods::PaymentMethod
    @addOrUpdate='Update'
    @paymentMethod={{this.paymentMethod}}
    @fields={{this.fields}}
    @creditCard={{this.model}}
    @handleSetAsDefault={{this.handleSetAsDefault}}
    @handleInput={{this.handleInput}}
    @handleRemoveAction={{this.handleRemoveAction}}
  />
</Primitive::Modal::Tray>
