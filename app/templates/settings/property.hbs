{{page-title 'Settings - Property Information'}}
<Primitive::Modal::Tray
  @onBack={{this.resetForm}}
  @hideRightAction={{true}}  
  @backText="Back"
  @hideFooter={{true}}
>
  <View::AccountSettings::Property
    @model={{this.propertyInfo}}
    @fields={{this.fields}}
    @validateForm={{this.validateForm}}
    @onSelect={{this.handleSelect}}
    @shouldShowPropertyDialog={{this.shouldShowPropertyDialog}}
    @showPropertyDialog={{this.showPropertyDialog}}
    @showMessenger={{this.showMessenger}}
    @toggleModal={{this.toggleModal}}    
  />
</Primitive::Modal::Tray>