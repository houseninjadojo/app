<div class="settings-view">
    <h1 class="view-title">Account Settings</h1>
    {{!-- <ReferralCode/> --}}
    <ul class="settings-menu">        
        {{#each this.menuItems as |item|}}
            <li class="menu-item">
                <button type="button" {{on "click" (fn this.selectRoute item.name) }}>
                    <span class="menu-item-label">{{item.label}}</span>
                    <img src="assets/icons/greater-than.svg" alt="right arrow" class="menu-item-icon" />
                </button>
            </li>
        {{/each}}
    </ul>
</div>