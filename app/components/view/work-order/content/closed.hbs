<Primitive::Section>
    <div class="work-order-details">
        <p class="hn field"><span class="hn label">Description: </span>{{@model.description}}</p>
        <p class="hn field"><span class="hn label">Status: </span>{{@model.statusLabel}}</p>
        <p class="hn field"><span class="hn label">Vendor: </span>{{if @model.vendor @model.vendor 'TBD'}}</p>
        <p class="hn field"><span class="hn label">Date of Service: </span>{{if @model.scheduledDate @model.scheduledDate 'TBD'}}</p>        
    </div>
    {{#if @model.invoice.stripeObject}}
        <div class="document-container">
            <Primitive::Button {{on "click" this.openBrowser}} @variant="plain">
                <Primitive::Image
                @src={{''}}
                @alt="invoice"
                @width="500"
                />
            </Primitive::Button>
        </div>
    {{/if}}
</Primitive::Section>