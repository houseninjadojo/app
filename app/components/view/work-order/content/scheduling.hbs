<div class="actions">
    <Primitive::Button
      @type="button"
      @size="md"
      @variant="outline"
      @semantic="primary"
      {{on "click" @handleReportAnIssue}}
    >
        I have a question
    </Primitive::Button>
    <hr/>
</div>
<Primitive::Section>
    <div class="work-order-details">
        <p class="hn field"><span class="hn label">Description: </span>{{@model.description}}</p>
        <p class="hn field"><span class="hn label">Status: </span>{{@model.statusLabel}}</p>
        <p class="hn field"><span class="hn label">Vendor: </span>{{if @model.vendor @model.vendor}}</p>
        <p class="hn field"><span class="hn label">Scheduled Date: </span>{{!-- {{if (and @model.vendor @model.scheduledDate) @model.scheduledDate }} --}}</p>
        <p class="hn field"><span class="hn label">Scheduled Time: </span>{{!-- {{if (and @model.vendor @model.scheduledDate @model.scheduledTime) @model.scheduledTime }} --}}</p>
    </div>
</Primitive::Section>