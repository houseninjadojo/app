<div class="hn work-order">    
    {{#if this.isLoading}}        
    {{else}}        
        <div class="hn work-order request content">
            {{component (concat "view/work-order/request/content" "/" this.contentType)
                request=this.request
                categories=this.categories
                currentStep=this.currentStep
                timingPriorities=this.timingPriorities
                imagePreviews=this.imagePreviews
                showImageSourceMenu=this.showImageSourceMenu
                imageSourceOptions=this.imageSourceOptions                
                
                handleTimingPriorityClick=this.handleTimingPriorityClick
                handleCategoryClick=this.handleCategoryClick
                handleNevermindClick=this.handleNevermindClick            
                handleDetailChange=this.handleDetailChange
                handleAdditionalChange=this.handleAdditionalChange                
                toggleImageSourceMenu=this.toggleImageSourceMenu
                handleDiscardImage=this.handleDiscardImage

                handleSubmit=this.handleSubmit
            }}
        </div>
    {{/if}}
</div>
