<div class="content mb-16">    
    <div class="prompt">        
        <p class="hn primary">Home Address</p>            
        {{#each @fields as |field|}}
            {{#if field.isSelect}}
            <Primitive::Select @options={{field.options}} @label={{field.label}} @required={{true}} @disabled={{field.disabled}}/>
        {{else}}
            <Primitive::Input @id={{field.id}} @required={{field.required}} @placeholder={{field.placeholder}} @value={{field.value}} @description={{field.description}} @label={{field.label}} @type={{field.type}} @disabled={{field.disabled}}/>
        {{/if}}
        {{/each}}
    </div>
    <div class="action">        
        <Primitive::Button @size='lg' @variant='outline' @semantic='primary'>Previous</Primitive::Button>
        <Primitive::Button @size='lg' @variant='solid' @semantic='primary'>Next <img src="assets/icons/right-arrow.svg" alt="right" class="icon"/></Primitive::Button>
    </div>
</div>