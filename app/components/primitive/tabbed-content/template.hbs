<div class="hn tabbed-content">
  <div class="tab-container">
    <ul class="tab-list">
      {{#each @tabbedContentTabs as |tab|}}
        <li>          
          <Primitive::Button @class="tab {{if tab.active 'active'}}" @variant="plain" @turnOffHapticFeedback={{if tab.active true}}>
            {{tab.label}}
          </Primitive::Button>         
        </li>
      {{/each}}
    </ul>
  </div> 
  <div class="content">
    {{yield}}
  </div> 
</div>