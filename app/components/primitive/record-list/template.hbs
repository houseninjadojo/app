{{#each @records as |record|}}
  <div class='filled'>
    <ul class='record-list'>
      <li>
        <Primitive::Button {{on 'click' (fn this.handleClick record)}} @class="record" @variant="plain">        
          {{#if @showIcon}}
            {{#if record.iconUri}}
              <span class='icon'>
                <img src={{record.iconUri}} alt={{record.type}} />
              </span>
            {{/if}}
          {{/if}}
          {{#if @showTimestamp}}
            <p class='timestamp'>
              {{#if record.scheduledTime}}
                <span>
                  {{record.scheduledTime}}
                </span>
              {{/if}}
              <span>
                {{record.scheduledDate}}
              </span>
            </p>
          {{/if}}
          <div class='details'>
            <p class='name'>
              {{record.name}}
            </p>
            <div class="hn row">
              <p class='description'>
                {{record.description}}
              </p>
              {{#if record.tag}}
                <Primitive::Tag @label={{record.tag.label}} @type={{record.tag.type}}/>
              {{/if}}
            </div>
          </div>
        </Primitive::Button>
      </li>
    </ul>
  </div>
{{else}}
  <div class='empty'>
    <p>{{@ifEmpty.message}}</p>
    <Primitive::Button
      @type='button'
      @size='sm'
      @variant='outline'
      @semantic='primary'
      {{on "click" this.handleIfEmptyClick}}
    >
      {{@ifEmpty.action}}
    </Primitive::Button>
  </div>
{{/each}}