{{! 
    OPTIONS
    @size: sm, md, lg
    @variant: solid, outline, floating, plain
    @semantic: primary, accent, secondary, alert, white, black
    @class: string
    @disabled: true / false
    @isLoading: true / false
    @turnOffHapticFeedback: true / false (default)
 }}
<button
  class='hn btn
    {{@size}}
    {{@variant}}
    {{@semantic}}
    {{if @disabled "disabled"}}
    {{@class}}'
  type={{if @type @type 'button'}}
  disabled={{(or @disabled @isLoading)}}
  {{on "click" this.handleClick}}
  ...attributes
>
  {{#if @isLoading}}
    <Primitive::Loader::Spinner />
  {{else}}
    {{yield}}
  {{/if}}  
</button>