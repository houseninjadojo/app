<div class="hn hn-input-field {{if @warn 'warn' ''}}">
    <div class="hn-input-container">
        <label class="hn-input-label" for={{@field.id}} >{{@field.label}}</label>
        <input class="hn-input" id={{@field.id}} type="text" required={{@field.required}} placeholder={{@field.placeholder}} value={{@field.value}}/>
    </div>
    {{#if @field.description}}
        <p class="hn-input-description">{{@field.description}}</p>
    {{/if}}
</div>