<div {{did-insert this.handleInsert}} class="hn hn-input-field {{if @warn 'warn' ''}} {{if @alert 'alert' ''}}{{if @disabled 'disabled' ''}} {{if @errors 'alert' ''}} {{if @hideLabel 'label-hidden'}} {{if (or this.hasValue this.isFocused) 'active'}}">
    <div class="hn-input-container">
        {{#if @hideLabel}}
            {{!-- template-lint-disable require-input-label  --}}
            <Input
              class="hn-input"
              id={{@id}}
              @type={{if @type @type "text"}}
              pattern={{if @pattern @pattern}}
              required={{@required}}
              placeholder={{@placeholder}}
              @value={{mut @value}}
              disabled={{@disabled}}
              aria-label={{@label}}
              aria-placeholder={{@placeholder}}
              {{on 'input' this.handleInput}}
              {{on 'paste' this.handlePaste}}
            />
        {{else}}
            <label class="hn-input-label" for={{@id}}>
                {{@label}}
                {{#if @placeholder}}
                    <span class="hn-input-placeholder">{{@placeholder}}</span>
                {{/if}}
                </label>
            <Input
              class="hn-input"
              id={{@id}}
              @type={{if @type @type "text"}}
              pattern={{if @pattern @pattern}}
              required={{@required}}
              placeholder={{@placeholder}}
              @value={{mut @value}}
              disabled={{@disabled}}
              aria-label={{@label}}
              aria-placeholder={{@placeholder}}
              {{on 'input' this.handleInput}}
              {{on 'paste' this.handlePaste}}
              {{on 'focus' this.handleFocus}}
              {{on 'blur' this.handleBlur}}
            />
        {{/if}}
    </div>
    {{#if @errors}}
        {{#each @errors as |error|}}
          <div class="hn hn-input-description-container">
              <span class="hn strong icon" role="img">!</span>
              <span class="hn-input-description">{{error.message}}</span>
          </div>
        {{/each}}
    {{else if this.descriptionText}}
        <div class="hn hn-input-description-container">
            <span class="hn hn-input-description">{{this.descriptionText}}</span>
        </div>
    {{/if}}
</div>
