<div class="hn hn-input-field {{if @warn 'warn' ''}} {{if @alert 'alert' ''}}{{if @disabled 'disabled' ''}}">
    <div class="hn-input-container">
        {{#if @hideLabel}}
            {{!-- template-lint-disable require-input-label  --}}
            <Input
              class="hn-input label-hidden"
              id={{@id}}
              @type={{if @type @type "text"}}
              pattern={{if @pattern @pattern}}
              required={{@required}}
              placeholder={{@placeholder}}
              @value={{mut @value}}
              disabled={{@disabled}}
              aria-label={{@label}}
              {{on 'input' this.handleChange}}
            />
        {{else}}
            <label class="hn-input-label" for={{@id}} >{{@label}}</label>
            <Input
              class="hn-input"
              id={{@id}}
              @type={{if @type @type "text"}}
              pattern={{if @pattern @pattern}}
              required={{@required}}
              placeholder={{@placeholder}}
              @value={{mut @value}}
              disabled={{@disabled}}
              {{on 'input' this.handleChange}}
            />
        {{/if}}
    </div>
    {{#if this.descriptionText}}
        <span class="hn-input-description">{{this.descriptionText}}</span>
    {{/if}}
</div>