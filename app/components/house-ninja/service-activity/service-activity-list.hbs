{{#each @records as |record|}}
    <div class="filled">
        <ul class="service-activity-list">
                <li>
                    <button type="button" class='record'>
                        <p class="timestamp">
                            <span>
                                {{record.scheduledTime}}
                            </span>
                            <span>
                                {{record.scheduledDate}}
                            </span>
                        </p>
                        <p class="name">
                            {{record.description}}
                        </p>
                        <p class="description">
                            {{record.vendor}}
                        </p>
                    </button>
                </li>
        </ul>
    </div>
{{else}}
    <HouseNinja::ServiceActivity::NoUpcomingService />
{{/each}}