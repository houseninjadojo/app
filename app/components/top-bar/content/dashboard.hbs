<Primitive::Button {{on "click" this.toggleSettingsViewVisibility}} @variant="plain" @class="action">      
    <img src="/assets/icons/hamboyga.svg" alt="hamburger menu"/>
</Primitive::Button>
<img src="/assets/images/logo.white.no-icon.svg" alt="House Ninja" class="logo z-40 w-5/12 mx-auto"/>    
<Primitive::Button {{on "click" this.showIntercom}} @variant="plain" @class="action right">
    {{#if (gt this.unreadConversationCount 0)}}
        <div class="hn-notification-count">
        <span>{{this.unreadConversationCount}}</span>
        </div>
    {{/if}}
    <img src="/assets/icons/message.svg" alt="messenger" {{did-insert this.getUnreadConversationCount}}/>      
</Primitive::Button>      
    