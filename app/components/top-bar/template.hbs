<div class="hn top-bar w-screen top-0 z-1 {{@class}}" {{did-insert this.getUnreadConversationCount}}>
  <div class="action-container">
    {{#if @userSignUpFlow }}      
    {{else}}
      <button type="button" class="action" {{on 'click' this.toggleSettingsViewVisibility}}>
        <img src="/assets/icons/hamboyga.svg" alt="hamburger menu"/>
      </button>
    {{/if}}
    <img src="/assets/images/logo.white.no-icon.svg" alt="House Ninja" class="logo z-40 w-5/12 mx-auto"/>
    {{#if @userSignUpFlow }}      
    {{else}}
      <button type="button" class="action right" {{on 'click' this.showIntercom}}>
        {{#if (gt this.unreadConversationCount 0)}}
          <div class="hn-notification-count">
            <span>{{this.unreadConversationCount}}</span>
          </div>
        {{/if}}
        <img src="/assets/icons/message.svg" alt="messener"/>      
      </button>
    {{/if}}    
  </div>
  {{#if this.isLoading}}
    <Primitive::Loader::Global />
  {{/if}}
</div>